source 'https://mirrors.tuna.tsinghua.edu.cn/git/CocoaPods/Specs.git'
platform :osx, '10.12'

target 'V2rayU' do
  # Comment the next line if you're not using Swift and don't want to use dynamic frameworks
  use_frameworks!

  # Pods for V2rayU
  pod 'Alamofire', '~> 4.9.1'
  pod 'SwiftyJSON'
  # master branch
  pod 'Preferences', :git => 'https://github.com/sindresorhus/Preferences.git', :tag => 'v1.0.1'
  pod 'Sparkle'
  pod 'QRCoder'
  pod "GCDWebServer"
  pod 'SwiftSocket', :git => 'https://github.com/odariusgeorge/SwiftSocket.git', :branch => 'patch-1'
  pod 'MASShortcut'


end
